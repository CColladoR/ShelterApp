<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Editor style -->
    <style name="EditorTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/primary_color_dark</item>
        <item name="colorAccent">@color/secondary_dark</item>
        <item name="android:fontFamily">@font/rubik</item>
    </style>

    <!-- Category style -->
    <style name="CategoryStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:textColor">@color/secondary_dark</item>
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
    </style>

    <style name="EditorTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">#fff</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>

</resources>